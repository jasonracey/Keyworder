<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <RadzenLink class="keyworder-nav-link navbar-brand" Path="select-keywords" Text="Keyworder"/>
        <RadzenButton 
            ButtonStyle="ButtonStyle.Info"
            class="navbar-toggler"
            Click=@ToggleNavMenu 
            Icon="menu" />
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <RadzenLink class="keyworder-nav-link" Icon="account_tree" Path="select-keywords" Text="Select Keywords"/>
        </div>
        <div class="nav-item px-3">
            <RadzenLink class="keyworder-nav-link" Icon="category" Path="manage-categories" Text="Manage Categories"/>
        </div>
        <div class="nav-item px-3">
            <RadzenLink class="keyworder-nav-link" Icon="key" Path="manage-keywords" Text="Manage Keywords"/>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu 
        ? "collapse" 
        : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
